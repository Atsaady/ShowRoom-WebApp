
@model ShowRoom.Models.AdminPanel

@{
    ViewData["Title"] = "Admin";
}

<body id="page-top">
    <section>
        <div class="container">
            <div class="pb-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
                            <h1>Admin Panel</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <div class="pb-5">
            <div class="container">
                <div class="row">
                    <div class="btn mr-2">

                        <!-- Search product by name -->
                        <form asp-action="SearchByName" class="form-inline">
                            <div class="form-group">

                                <input name="name" class="form-control mr-2" placeholder="Enter product name" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Search" class="btn btn-secondary" />
                            </div>
                        </form>


                        <!-- Search product by ID -->
                        <form asp-action="SearchByProductID" class="form-inline">
                            <div class="form-group">
                                <input name="product_id" class="form-control mr-2" placeholder="Enter product ID" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Search" class="btn btn-secondary" />
                            </div>
                        </form>


                        <!-- Search Order by Order ID -->

                        <form asp-action="SearchByOrderID" class="form-inline">
                            <div class="form-group">

                                <input name="order_id" class="form-control mr-2" placeholder="Enter order ID" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Search" class="btn btn-secondary" />
                            </div>
                        </form>


                        <!-- Search Account by Account Email -->

                        <form asp-action="SearchByAccountEmail" class="form-inline">
                            <div class="form-group">
                                <input name="email" class="form-control mr-2" placeholder="Enter account Email" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Search" class="btn btn-secondary" />
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
</body>
 <partial name="OrderIndex" model="Model.Orders" />
 <partial name="AccountIndex" model="Model.Accounts" />
 <partial name="ClothingsIndex" model="Model.Clothings" />
