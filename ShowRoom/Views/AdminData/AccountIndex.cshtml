@model IEnumerable<ShowRoom.Models.Account>

@{
    ViewData["Title"] = "View";
}

<div class="pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

                <!-- Shopping cart table -->
                <div class="table-responsive">
                    <h2>Accounts</h2>

                    <p>
                        <a asp-action="AccountCreate">Create New</a>
                    </p>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Password)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Type)
                                </th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                    <td scope="row">
                                        <a asp-action="AccountEdit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="AccountDetails" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="AccountDelete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

