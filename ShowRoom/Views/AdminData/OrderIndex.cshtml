@model IEnumerable<ShowRoom.Models.Order>

@{
    ViewData["Title"] = "OrderIndex";
}


<div class="pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

                <!-- Shopping cart table -->
                <div class="table-responsive">
                    <h2>Orders</h2>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th class="thead-dark">
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th class="thead-dark">
                                    @Html.DisplayNameFor(model => model.OrderTime)
                                </th>
                                <th class="thead-dark">
                                    @Html.DisplayNameFor(model => model.Phone)
                                </th>
                                <th class="thead-dark">
                                    @Html.DisplayNameFor(model => model.SumToPay)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.OrderTime)
                                    </td>
                                    <td scope="row"> 
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.SumToPay)
                                    </td>
                                    <td scope="row">
                                        <a asp-action="OrderDetails" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="OrderDelete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
