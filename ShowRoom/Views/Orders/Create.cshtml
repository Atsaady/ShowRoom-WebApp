@model ShowRoom.Models.Order

@{ ViewData["Title"] = "Create"; }

@{ IEnumerable<ShowRoom.Models.Cart> cart = (IEnumerable<ShowRoom.Models.Cart>)ViewData["cart_to_view"]; }

<html>
<body id="page-top">
    <section class="page-section bg-light">
        <div class="container">
            <div style="text-align:center">
                <br />
                <h4>Checkout</h4>
                <hr />

                <table class="table" style="width:50%" align="right">
                    <thead>
                        <tr>

                            <th scope="col" class="border-0 bg-light">
                                <div class="py-2 text-uppercase">Clothings</div>
                            </th>
                            <th scope="col" class="border-0 bg-light">
                                <div class="py-2 text-uppercase">Price</div>
                            </th>
                            <th scope="col" class="border-0 bg-light">
                                <div class="py-2 text-uppercase">Quantity</div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in cart)
                        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Clothings.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clothings.Price) ILS
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
            </tr>}
                    </tbody>
                </table>

                <div class="row left">
                    <div class="col-md-8">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" required />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input type="number" asp-for="Phone" class="form-control" required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            @{ var data = (double)ViewData["Message"]; }
                            <br />
                            <h5> Total to pay: @data NIS</h5>
                            <div class="form-group">
                                <br />
                                <button class="btn btn-dark rounded-pill py-2 btn-block" type="submit" value="Create">Create</button>

                            </div>

                        </form>
                    </div>
                </div>

                <div>
                    <a asp-area="" asp-controller="Carts" asp-action="Index">Back to cart</a>
                </div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }



            </div>
        </div>
    </section>
</body>
</html>