@model IEnumerable<ShowRoom.Models.Clothings>

@{
    var BestCategory = ViewData["BestCategory"];
}

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ClothingsLayout.cshtml";
}

@section Categories{
    <div class="left-side">
        <h3 class="agileits-sear-head">Categories</h3>
        <ul>
            <li>
                <input type="checkbox" class="category_checkbox " name="category" value="1">
                <span class="span">T-Shirts</span>
            </li>
            <li>
                <input type="checkbox" class="category_checkbox" name="category" value="2">
                <span class="span">Pants</span>
            </li>
            <li>
                <input type="checkbox" class="category_checkbox" name="category" value="3">
                <span class="span">Shoes</span>
            </li>
            <li>
                <input type="checkbox" class="category_checkbox" name="category" value="4">
                <span class="span">Dresses</span>
            </li>
            <li>
                <input type="checkbox" class="category_checkbox" name="category" value="5">
                <span class="span">Accessories</span>
            </li>
        </ul>
    </div>
}

<body id="page-top">
    <div class="agileinfo-ads-display col-md-9 w3l-rightpro">

    <div class="wrapper" id="tbody">

        <!-- first section -->
        @foreach (var item in Model)
        {
            <div class="col-md-4 product-sec1">

                <div class="col-xs-12 product-men">

                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item">
                            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" height="160" width="160">
                            @*maor*@
                        </div>
                        <div class="item-info-product ">
                            <h4>
                                @*maor*@
                                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                            </h4>
                            <div class="w3l-pricehkj">
                                <h6>@Html.DisplayFor(modelItem => item.Price) ILS</h6>
                            </div>
                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                <a class="snipcart-details" asp-action="AddToCart" asp-route-id="@item.Id">
                                    <input type="submit" name="submit" value="Add to cart" class="button" />
                                </a>

                            </div>

                        </div>
                    </div>

                </div>

                <div class="clearfix"></div>
            </div>
        }

        <!-- //Relevant Clothings -->
        @section RelevantProducts{

            @if (BestCategory != null)
            {
                string x = BestCategory.ToString();

                @foreach (var item in Model.Where(p => p.Category.Equals(x)))

                {
                    <li>
                        <div class="w3l-specilamk">
                            <div class="speioffer-agile">
                                <a asp-action="Details" asp-route-id="@Html.DisplayFor(modelItem => item.Id)">
                                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" height="180" width="180">
                                </a>
                            </div>
                            <h5><span class="badge badge-pill badge-danger">Special For You!</span></h5>
                            <div class="product-name-w3l">
                                <h4>
                                    <a asp-action="Details" asp-route-id="@Html.DisplayFor(modelItem => item.Id)">@Html.DisplayFor(modelItem => item.Name)</a>
                                </h4>
                                <div class="w3l-pricehkj">
                                    <h6>@Html.DisplayFor(modelItem => item.Price) ILS</h6>
                                </div>
                                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                    <a class="snipcart-details" asp-action="AddToCart" asp-route-id="@item.Id">
                                        <input type="submit" name="submit" value="Add to cart" class="button" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>

                }
            }

            @*}*@
        }
    </div>
    <!-- /.col-lg-9 -->

</div>
</body>


@section Scripts{
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
    <script src="~/js/search.js"></script>
    <script src="~/js/filters.js"></script>

    <script id="results" type="text/html">
        <div class="col-md-4 product-sec1">
            <div class="col-xs-12 product-men">
                <div class="men-pro-item simpleCart_shelfItem">
                    <div class="men-thumb-item">
                        <img src="${imageUrl}" alt="" height="160" width="160">
                        <div class="men-cart-pro">
                            <div class="inner-men-cart-pro">
                                <a class="link-product-add-cart" href="/Clothings/Details/${id}">Details</a>
                            </div>
                        </div>
                    </div>
                    <div class="item-info-product ">
                        <h4>
                            <a href="#">${name}</a>
                        </h4>
                        <div class="w3l-pricehkj">
                            <h6>${price} ILS</h6>
                        </div>
                        <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                            <a class="snipcart-details" href="/Clothings/AddToCart/${id}">
                                <input type="submit" name="submit" value="Add to cart" class="button" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </script>
}

