@model IEnumerable<ShowRoom.Models.Clothings>


<div class="agileinfo-ads-display col-md-9 w3l-rightpro">

    <div class="wrapper">
        <!-- first section -->
        @foreach (var item in Model)
        {
            <div class="col-md-4 product-sec1">

                <div class="col-xs-12 product-men">

                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item">
                            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" height="160" width="160">
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a class="link-product-add-cart" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </div>
                            </div>
                        </div>
                        <div class="item-info-product ">
                            <h4>
                                <a href="#">@Html.DisplayFor(modelItem => item.Name)</a>
                            </h4>
                            <div class="info-product-price">
                                <span class="item_price">@Html.DisplayFor(modelItem => item.Price) ILS</span>
                            </div>
                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                               <a class="snipcart-details" asp-action="AddToCart" asp-route-id="@item.Id">
                                    <input type="submit" name="submit" value="Add to cart" class="button" />
                               </a>
   
                            </div>

                        </div>
                    </div>

                </div>
                
                <div class="clearfix"></div>

                
            </div>
        }

            <!-- //first section -->


    </div>
        <!-- /.col-lg-9 -->
   
 </div>



